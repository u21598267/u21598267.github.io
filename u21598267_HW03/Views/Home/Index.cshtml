
<h2>@ViewBag.Title</h2>
<h4>@ViewBag.SubTitle</h4>

<div>

    <div style="float:left;width:600px">
        <h5><strong>Description</strong></h5> <br />
        <p>@ViewBag.Description</p>

    </div>
    <div style="float:left;margin-left: 30px">
        <h2>Option Selection</h2>
        <label for="document">Document</label>
        <input type="radio" id="document" value="Document"><br>

        <label for="image">Image</label>
        <input type="radio" id="image" value="Image"><br>

        <label for="video">Video</label>
        <input type="radio" id="video" value="Video"><br>

                                                     <form action="" method="post" enctype="multipart/form-data">

                                                         <label for="file">Filename:</label>
                                                         <input type="file" name="file" id="file" />

                                                         <input type="submit" />
                                                     </form>
    </div>
</div>